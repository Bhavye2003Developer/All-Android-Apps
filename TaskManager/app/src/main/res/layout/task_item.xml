<?xml version="1.0" encoding="utf-8"?>
<!-- task_item.xml -->

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <!-- Task Title -->
        <TextView
            android:id="@+id/textViewTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1E88E5" /> <!-- Change text color to a shade of blue -->

        <!-- Start Date -->
        <TextView
            android:id="@+id/textViewStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date: January 1, 2023"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />

        <!-- Deadline -->
        <TextView
            android:id="@+id/textViewDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deadline: January 31, 2023"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />

        <!-- Tick Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Right Tick Icon -->
            <ImageView
                android:id="@+id/imageViewRightTick"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_tick"
                android:layout_marginEnd="30dp" /> <!-- Add margin here -->

            <!-- Wrong Tick Icon -->
            <ImageView
                android:id="@+id/imageViewWrongTick"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_wrong" />
        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="#E0E0E0" />
    </LinearLayout>
</layout>
