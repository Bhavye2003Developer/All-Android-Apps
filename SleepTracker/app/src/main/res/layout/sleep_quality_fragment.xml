<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/how_was_your_sleep"
            android:textSize="30sp"
            android:layout_marginBottom="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp">


            <ImageView
                android:id="@+id/sleep_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_sleep_0"
                android:layout_marginEnd="20dp"
                android:tag="Poor"/>

            <ImageView
                android:id="@+id/sleep_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_sleep_1"
                android:layout_marginEnd="20dp"
                android:tag="Not good"/>

            <ImageView
                android:id="@+id/sleep_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_sleep_2"
                android:tag="Ok-ish"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageView
                android:id="@+id/sleep_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_sleep_3"
                android:layout_marginEnd="20dp"
                android:tag="Good"/>

            <ImageView
                android:id="@+id/sleep_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_sleep_4"
                android:layout_marginEnd="20dp"
                android:tag="Pretty good"/>

            <ImageView
                android:id="@+id/sleep_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/ic_sleep_5"
                android:tag="Excellent!"/>

        </LinearLayout>

    </LinearLayout>
</layout>